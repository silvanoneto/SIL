pkgname=sil-ecosystem
pkgver=@PKGVER@
pkgrel=1
pkgdesc="Meta package for SIL/LIS tools (depends on lis-cli, lis-format, lis-runtime, lis-api)"
arch=('any')
url="https://github.com/silvanoneto/SIL"
license=('AGPL3')
depends=(
  'lis-cli'
  'lis-format'
  'lis-runtime'
  'lis-api'
)
makedepends=()
source=()
sha256sums=()

package() {
  # Meta only; nothing to install
  install -d "$pkgdir/usr/share/doc/$pkgname"
  echo "This meta package depends on lis-cli, lis-format, lis-runtime, lis-api." > "$pkgdir/usr/share/doc/$pkgname/README"
}
