pkgname=lis-api-git
pkgver=0
pkgrel=1
pkgdesc="REST API server for LIS (git master)"
arch=('x86_64' 'aarch64')
url="https://github.com/silvanoneto/SIL"
license=('AGPL3')
depends=('openssl')
makedepends=('rust' 'cargo' 'git')
source=("SIL::git+https://github.com/silvanoneto/SIL.git")
sha256sums=('SKIP')

pkgver() {
  cd SIL
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd SIL
  cargo build --release -p lis-api
}

package() {
  cd SIL
  install -Dm755 "target/release/lis-api" "$pkgdir/usr/bin/lis-api"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
