pkgname=lis-runtime
pkgver=@PKGVER@
pkgrel=1
pkgdesc="Runtime for executing LIS programs compiled to VSP bytecode"
arch=('x86_64' 'aarch64')
url="https://github.com/silvanoneto/SIL"
license=('AGPL3')
depends=()
makedepends=('rust' 'cargo')
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/ecosystem-v$pkgver.tar.gz")
sha256sums=('SKIP')

build() {
  cd "SIL-ecosystem-v$pkgver"
  cargo build --release -p lis-runtime
}

package() {
  cd "SIL-ecosystem-v$pkgver"
  install -Dm755 "target/release/lis-run" "$pkgdir/usr/bin/lis-run"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
