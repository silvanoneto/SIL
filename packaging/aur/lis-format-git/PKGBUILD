pkgname=lis-format-git
pkgver=0
pkgrel=1
pkgdesc="Code formatter for LIS (git master)"
arch=('x86_64' 'aarch64')
url="https://github.com/silvanoneto/SIL"
license=('AGPL3')
depends=()
makedepends=('rust' 'cargo' 'git')
source=("SIL::git+https://github.com/silvanoneto/SIL.git")
sha256sums=('SKIP')

pkgver() {
  cd SIL
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd SIL
  cargo build --release -p lis-format
}

package() {
  cd SIL
  install -Dm755 "target/release/lis-format" "$pkgdir/usr/bin/lis-format"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
