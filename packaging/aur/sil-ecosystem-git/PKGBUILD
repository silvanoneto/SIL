pkgname=sil-ecosystem-git
pkgver=0
pkgrel=1
pkgdesc="Meta package for SIL/LIS tools (git master)"
arch=('any')
url="https://github.com/silvanoneto/SIL"
license=('AGPL3')
depends=(
  'lis-cli-git'
  'lis-format-git'
  'lis-runtime-git'
  'lis-api-git'
)
makedepends=('git')
source=("SIL::git+https://github.com/silvanoneto/SIL.git")
sha256sums=('SKIP')

pkgver() {
  cd SIL
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  install -d "$pkgdir/usr/share/doc/$pkgname"
  echo "This meta package depends on lis-cli-git, lis-format-git, lis-runtime-git, lis-api-git." > "$pkgdir/usr/share/doc/$pkgname/README"
}
