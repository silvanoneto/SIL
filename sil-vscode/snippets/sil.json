{
  "SIL Program": {
    "prefix": "sil-prog",
    "body": [
      "; ${1:Program description}",
      ".mode ${2|SIL-128,SIL-64,SIL-32,SIL-16,SIL-8|}",
      "",
      ".code",
      "${3:main}:",
      "    ${0:NOP}",
      "    HLT"
    ],
    "description": "Create a new SIL program"
  },
  "SIL Program with Data": {
    "prefix": "sil-prog-data",
    "body": [
      "; ${1:Program description}",
      ".mode ${2|SIL-128,SIL-64,SIL-32,SIL-16,SIL-8|}",
      "",
      ".data",
      "${3:value} .byte ${4:0x00}",
      "",
      ".code",
      "${5:main}:",
      "    LOAD R0, ${3}",
      "    ${0}",
      "    HLT"
    ],
    "description": "Create a SIL program with data section"
  },
  "Function Definition": {
    "prefix": "sil-fn",
    "body": [
      "; ${1:Function description}",
      "; Input: ${2:R0}",
      "; Output: ${3:R0}",
      "${4:function_name}:",
      "    PUSH R1         ; Save registers",
      "    ${0}",
      "    POP R1          ; Restore registers",
      "    RET"
    ],
    "description": "Create a SIL function"
  },
  "Loop Structure": {
    "prefix": "sil-loop",
    "body": [
      "    MOVI R${1:0}, ${2:10}    ; Loop counter",
      "${3:loop}:",
      "    ${0}",
      "    SUB R${1}, R${1}, 1",
      "    JZ ${4:done}",
      "    JMP ${3}",
      "${4}:"
    ],
    "description": "Create a loop structure"
  },
  "Conditional Branch": {
    "prefix": "sil-if",
    "body": [
      "    ; if R${1:0} == 0",
      "    JZ ${2:then_branch}",
      "    ; else",
      "    ${3:NOP}",
      "    JMP ${4:endif}",
      "${2}:",
      "    ${0:NOP}",
      "${4}:"
    ],
    "description": "Create a conditional branch"
  },
  "Data Section": {
    "prefix": "sil-data",
    "body": [
      ".data",
      "${1:var1} .byte ${2:0x00}",
      "${3:var2} .state ${4:0x0000000000000000}",
      ""
    ],
    "description": "Create a data section"
  },
  "Layer Transform Pipeline": {
    "prefix": "sil-pipe",
    "body": [
      "    ; Layer transform pipeline",
      "    TRANS R${1:0}, R${2:1}    ; Apply transform ${3:T}",
      "    PIPE R${2}, R${4:2}     ; Pipeline result",
      "    FOLD                     ; Fold layers"
    ],
    "description": "Create a layer transform pipeline"
  },
  "Entanglement Pair": {
    "prefix": "sil-entangle",
    "body": [
      "    ; Quantum entanglement",
      "    ENTANGLE R${1:0}, R${2:1}",
      "    SYNC R${1}",
      "    BROADCAST R${1}"
    ],
    "description": "Create an entanglement pair"
  },
  "Gradient Descent": {
    "prefix": "sil-descent",
    "body": [
      "    ; Gradient descent optimization",
      "    GRAD R${1:0}              ; Compute gradient",
      "    DESCENT R${1}, R${2:1}, ${3:0.01} ; Step with learning rate",
      "    EMERGE R${2}              ; Check emergence"
    ],
    "description": "Create a gradient descent step"
  },
  "Mode Compatibility": {
    "prefix": "sil-compat",
    "body": [
      "    ; Mode compatibility",
      "    SETMODE ${1|SIL-8,SIL-16,SIL-32,SIL-64|}",
      "    DEMOTE R${2:0}, R${3:1}   ; Demote to lower mode",
      "    ${0}",
      "    PROMOTE R${3}, R${2}      ; Promote back"
    ],
    "description": "Create mode compatibility conversion"
  },
  "Interpolation": {
    "prefix": "sil-lerp",
    "body": [
      "    ; Linear interpolation",
      "    LERP R${1:0}, R${2:1}, R${3:2}   ; Lerp between R1 and R2",
      "    ; t = R0, result in R0"
    ],
    "description": "Linear interpolation between states"
  },
  "Spherical Interpolation": {
    "prefix": "sil-slerp",
    "body": [
      "    ; Spherical interpolation",
      "    SLERP R${1:0}, R${2:1}, R${3:2}  ; Slerp between R1 and R2",
      "    ; t = R0, result in R0"
    ],
    "description": "Spherical interpolation between states"
  },
  "Complex Arithmetic": {
    "prefix": "sil-complex",
    "body": [
      "    ; Complex number operations",
      "    MAG R${1:0}              ; |z|",
      "    PHASE R${2:1}            ; arg(z)",
      "    CONJ R${3:2}             ; z*",
      "    INV R${4:3}              ; 1/z"
    ],
    "description": "Complex number operations"
  },
  "State IO": {
    "prefix": "sil-io",
    "body": [
      "    ; State I/O",
      "    SENSE R${1:0}, ${2:L0}   ; Sense layer ${2}",
      "    ACT R${1}, ${3:L5}       ; Act on layer ${3}",
      "    SYNC R${1}               ; Synchronize"
    ],
    "description": "State input/output operations"
  },
  "Processor Hints": {
    "prefix": "sil-hint",
    "body": [
      "    ; Processor optimization hints",
      "    HINT.${1|GPU,NPU,CPU,ANY|}",
      "    BATCH ${2:16}            ; Batch size",
      "    ${0}",
      "    UNBATCH"
    ],
    "description": "Processor optimization hints"
  }
}
