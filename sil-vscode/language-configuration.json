{
  "comments": {
    "lineComment": ";"
  },
  "brackets": [
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*\\.code|\\.data",
      "end": "^\\s*\\.code|\\.data|^\\s*$"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*\\w+:",
    "decreaseIndentPattern": "^\\s*\\.code|\\.data"
  },
  "wordPattern": "[A-Za-z_][A-Za-z0-9_]*|0x[0-9A-Fa-f]+|\\d+"
}
