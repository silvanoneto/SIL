{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "LIS",
  "scopeName": "source.lis",
  "patterns": [
    { "include": "#comments" },
    { "include": "#modules" },
    { "include": "#keywords" },
    { "include": "#functions" },
    { "include": "#types" },
    { "include": "#annotations" },
    { "include": "#operators" },
    { "include": "#literals" },
    { "include": "#strings" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.lis",
          "match": "//.*$"
        },
        {
          "name": "comment.block.lis",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            {
              "name": "comment.block.lis",
              "match": "."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.lis",
          "match": "\\b(fn|transform|type|let|return|if|else|loop|break|continue)\\b"
        },
        {
          "name": "keyword.control.import.lis",
          "match": "\\b(use|mod|as|extern)\\b"
        },
        {
          "name": "keyword.other.lis",
          "match": "\\b(feedback|emerge|sense|act|process|normalize|detect_patterns)\\b"
        },
        {
          "name": "storage.modifier.lis",
          "match": "\\b(pub|priv|const|mut)\\b"
        }
      ]
    },
    "modules": {
      "patterns": [
        {
          "name": "meta.use.lis",
          "match": "\\b(use)\\s+([a-zA-Z_][a-zA-Z0-9_]*(?:::[a-zA-Z_][a-zA-Z0-9_]*)*)(?:\\s+(as)\\s+([a-zA-Z_][a-zA-Z0-9_]*))?",
          "captures": {
            "1": { "name": "keyword.control.import.lis" },
            "2": { "name": "entity.name.namespace.lis" },
            "3": { "name": "keyword.control.import.lis" },
            "4": { "name": "entity.name.namespace.alias.lis" }
          }
        },
        {
          "name": "meta.mod.lis",
          "match": "\\b(mod)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.control.import.lis" },
            "2": { "name": "entity.name.namespace.lis" }
          }
        },
        {
          "name": "meta.extern.lis",
          "begin": "\\b(extern)\\s+(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "beginCaptures": {
            "1": { "name": "keyword.control.import.lis" },
            "2": { "name": "keyword.control.lis" },
            "3": { "name": "entity.name.function.lis" }
          },
          "end": "\\)",
          "patterns": [
            { "include": "#types" },
            { "include": "#identifiers" },
            { "name": "punctuation.separator.lis", "match": "," },
            { "name": "keyword.operator.lis", "match": ":" }
          ]
        },
        {
          "name": "punctuation.separator.namespace.lis",
          "match": "::"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.lis",
          "begin": "\\b(fn|transform)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "beginCaptures": {
            "1": { "name": "keyword.control.lis" },
            "2": { "name": "entity.name.function.lis" }
          },
          "end": "\\)",
          "patterns": [
            { "include": "#types" },
            { "include": "#identifiers" },
            {
              "name": "punctuation.separator.lis",
              "match": ","
            },
            {
              "name": "keyword.operator.lis",
              "match": ":"
            }
          ]
        },
        {
          "name": "meta.function.call.lis",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "entity.name.function.lis" }
          }
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.lis",
          "match": "\\b(ByteSil|State|Layer|Int|Float|Bool|String|Void|Complex|Unit)\\b"
        },
        {
          "name": "support.type.layer.lis",
          "match": "\\bL([0-9A-Fa-f])\\b",
          "captures": {
            "1": { "name": "constant.numeric.hex.lis" }
          }
        },
        {
          "name": "entity.name.type.lis",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "annotations": {
      "patterns": [
        {
          "name": "storage.type.annotation.lis",
          "match": "@(cpu|gpu|npu|simd|photonic|quantum)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.pipeline.lis",
          "match": "\\|>"
        },
        {
          "name": "keyword.operator.arrow.lis",
          "match": "->"
        },
        {
          "name": "keyword.operator.arithmetic.lis",
          "match": "(\\+|-|\\*|/|\\*\\*|%)"
        },
        {
          "name": "keyword.operator.logical.lis",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.comparison.lis",
          "match": "(==|!=|<|>|<=|>=)"
        },
        {
          "name": "keyword.operator.bitwise.lis",
          "match": "(&|\\||\\^|~)"
        },
        {
          "name": "keyword.operator.assignment.lis",
          "match": "(=|\\+=|-=|\\*=|/=)"
        },
        {
          "name": "keyword.operator.access.lis",
          "match": "\\."
        },
        {
          "name": "keyword.operator.magnitude.lis",
          "match": "\\|.*\\|"
        }
      ]
    },
    "literals": {
      "patterns": [
        { "include": "#numbers" },
        { "include": "#booleans" },
        { "include": "#tuples" }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.lis",
          "match": "\\b-?[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.hex.lis",
          "match": "\\b0[xX][0-9A-Fa-f]+\\b"
        },
        {
          "name": "constant.numeric.binary.lis",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.octal.lis",
          "match": "\\b0[oO][0-7]+\\b"
        },
        {
          "name": "constant.numeric.decimal.lis",
          "match": "\\b-?[0-9]+\\b"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.lis",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "tuples": {
      "patterns": [
        {
          "name": "meta.tuple.lis",
          "begin": "\\(",
          "end": "\\)",
          "patterns": [
            { "include": "#numbers" },
            { "include": "#identifiers" },
            {
              "name": "punctuation.separator.lis",
              "match": ","
            }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.lis",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.lis",
              "match": "\\\\(n|r|t|\\\\|\"|'|x[0-9A-Fa-f]{2}|u\\{[0-9A-Fa-f]+\\})"
            },
            {
              "name": "invalid.illegal.unrecognized-escape.lis",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.lis",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.lis",
              "match": "\\\\(n|r|t|\\\\|\"|'|x[0-9A-Fa-f]{2})"
            },
            {
              "name": "invalid.illegal.unrecognized-escape.lis",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.lis",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
