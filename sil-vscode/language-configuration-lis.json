{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*(fn|transform|type|mod|pub\\s+fn|pub\\s+transform|pub\\s+mod)\\s+\\w+.*\\{",
      "end": "^\\s*\\}"
    }
  },
  "wordPattern": "[A-Za-z_][A-Za-z0-9_]*(::[A-Za-z_][A-Za-z0-9_]*)*",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(fn|transform|if|else|loop|mod|pub\\s+fn|pub\\s+transform|pub\\s+mod).*\\{\\s*$",
    "decreaseIndentPattern": "^\\s*\\}"
  }
}
