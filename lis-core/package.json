{
  "name": "@sil/lis-core",
  "version": "2026.1.16",
  "description": "LIS (Language for Intelligent Systems) - WebAssembly bindings for LIS compiler and runtime",
  "main": "pkg/lis_core.js",
  "types": "pkg/lis_core.d.ts",
  "files": [
    "pkg"
  ],
  "scripts": {
    "build": "wasm-pack build --target bundler --out-dir pkg --features wasm",
    "build:web": "wasm-pack build --target web --out-dir pkg-web --features wasm",
    "build:node": "wasm-pack build --target nodejs --out-dir pkg-node --features wasm",
    "build:all": "npm run build && npm run build:web && npm run build:node",
    "test": "wasm-pack test --node",
    "pack": "wasm-pack pack"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/silvanoneto/SIL.git"
  },
  "keywords": [
    "compiler",
    "webassembly",
    "wasm",
    "non-linear",
    "metaprogramming",
    "lis",
    "sil",
    "bytecode"
  ],
  "author": "Silvano Neto <dev@silvanoneto.com>",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/silvanoneto//issues"
  },
  "homepage": "https://github.com/silvanoneto/",
  "devDependencies": {
    "wasm-pack": "^0.12.1"
  }
}
