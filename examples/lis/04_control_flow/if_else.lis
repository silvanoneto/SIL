// LIS Example: Condicionais If/Else
// Demonstra: if, else, condicionais aninhados
// Documentação: Seção 7.4

fn main() {
    print_string("=== If/Else Conditionals ===");

    // =========================================
    // If Simples
    // =========================================
    print_string("--- Simple If ---");

    let x = 10;

    if x > 5 {
        print_string("x is greater than 5");
    }

    if x < 5 {
        print_string("x is less than 5");
    }

    // =========================================
    // If/Else
    // =========================================
    print_string("--- If/Else ---");

    let y = 3;

    if y > 5 {
        print_string("y is greater than 5");
    } else {
        print_string("y is not greater than 5");
    }

    // =========================================
    // If/Else If/Else (Aninhado)
    // =========================================
    print_string("--- If/Else If/Else ---");

    let score = 75;

    if score >= 90 {
        print_string("Grade: A");
    } else {
        if score >= 80 {
            print_string("Grade: B");
        } else {
            if score >= 70 {
                print_string("Grade: C");
            } else {
                if score >= 60 {
                    print_string("Grade: D");
                } else {
                    print_string("Grade: F");
                }
            }
        }
    }

    // =========================================
    // Condições Compostas
    // =========================================
    print_string("--- Compound Conditions ---");

    let age = 25;
    let has_license = true;

    if age >= 18 && has_license {
        print_string("Can drive");
    } else {
        print_string("Cannot drive");
    }

    let is_weekend = false;
    let is_holiday = true;

    if is_weekend || is_holiday {
        print_string("Day off!");
    } else {
        print_string("Work day");
    }

    // =========================================
    // Comparações Numéricas
    // =========================================
    print_string("--- Numeric Comparisons ---");

    let a = 10;
    let b = 10;

    if a == b {
        print_string("a equals b");
    }

    if a != b {
        print_string("a not equals b");
    } else {
        print_string("a and b are the same");
    }

    // =========================================
    // Range Check
    // =========================================
    print_string("--- Range Check ---");

    let value = 50;
    let min_val = 0;
    let max_val = 100;

    if value >= min_val {
        if value <= max_val {
            print_string("Value is in valid range [0, 100]");
        }
    }

    // Alternative with &&
    if value >= min_val && value <= max_val {
        print_string("Value confirmed in range");
    }

    // =========================================
    // Negation in Conditions
    // =========================================
    print_string("--- Negation ---");

    let is_empty = false;

    if !is_empty {
        print_string("Not empty, processing...");
    }

    let count = 0;

    if count == 0 {
        print_string("Count is zero");
    }

    if !(count > 0) {
        print_string("Count is not positive");
    }

    // =========================================
    // Practical Example: Absolute Value
    // =========================================
    print_string("--- Absolute Value ---");

    let num = -42;

    if num < 0 {
        let abs_num = -num;
        print_string("Absolute value:");
        print_int(abs_num);
    } else {
        print_string("Already positive:");
        print_int(num);
    }
}
