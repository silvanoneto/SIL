// LIS Example: Operadores de Comparação
// Demonstra: ==, !=, <, <=, >, >=
// Documentação: Seção 6.4

fn main() {
    print_string("=== Comparison Operators ===");

    let a = 10;
    let b = 20;
    let c = 10;

    // =========================================
    // Igualdade (==)
    // =========================================
    print_string("--- Equality (==) ---");

    if a == c {
        print_string("10 == 10: true");
    }

    if a == b {
        print_string("10 == 20: true");
    } else {
        print_string("10 == 20: false");
    }

    // =========================================
    // Diferença (!=)
    // =========================================
    print_string("--- Inequality (!=) ---");

    if a != b {
        print_string("10 != 20: true");
    }

    if a != c {
        print_string("10 != 10: true");
    } else {
        print_string("10 != 10: false");
    }

    // =========================================
    // Menor que (<)
    // =========================================
    print_string("--- Less than (<) ---");

    if a < b {
        print_string("10 < 20: true");
    }

    if b < a {
        print_string("20 < 10: true");
    } else {
        print_string("20 < 10: false");
    }

    // =========================================
    // Menor ou igual (<=)
    // =========================================
    print_string("--- Less or equal (<=) ---");

    if a <= c {
        print_string("10 <= 10: true");
    }

    if a <= b {
        print_string("10 <= 20: true");
    }

    // =========================================
    // Maior que (>)
    // =========================================
    print_string("--- Greater than (>) ---");

    if b > a {
        print_string("20 > 10: true");
    }

    if a > b {
        print_string("10 > 20: true");
    } else {
        print_string("10 > 20: false");
    }

    // =========================================
    // Maior ou igual (>=)
    // =========================================
    print_string("--- Greater or equal (>=) ---");

    if a >= c {
        print_string("10 >= 10: true");
    }

    if b >= a {
        print_string("20 >= 10: true");
    }

    // =========================================
    // Comparações com Float
    // =========================================
    print_string("--- Float comparisons ---");

    let x = 3.14;
    let y = 2.71;

    if x > y {
        print_string("3.14 > 2.71: true");
    }

    if x >= 3.14 {
        print_string("3.14 >= 3.14: true");
    }

    // =========================================
    // Comparações em Expressões
    // =========================================
    print_string("--- Comparisons in expressions ---");

    let min_val = 5;
    let max_val = 15;
    let test_val = 10;

    // Range check
    if test_val >= min_val {
        if test_val <= max_val {
            print_string("10 is in range [5, 15]");
        }
    }
}
